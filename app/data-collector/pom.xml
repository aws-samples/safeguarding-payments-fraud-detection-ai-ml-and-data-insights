      <scope>test</scope>
    </dependency>

    <!-- https://mvnrepository.com/artifact/software.amazon.awssdk/sqs -->
    <dependency>
      <groupId>software.amazon.awssdk</groupId>
      <artifactId>sqs</artifactId>
      <version>2.25.31</version>
    </dependency>

